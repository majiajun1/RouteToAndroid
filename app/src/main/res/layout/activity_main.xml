<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/purple_500"
            android:text="Hello World!"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Button 1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="try something"
            android:maxLines="2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Print the type text"
            android:id="@+id/printType"/>

        <Button
            android:id="@+id/btn_fragment_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Fragment Demo"
            android:backgroundTint="#009688"/>

        <Button
            android:id="@+id/btn_split_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to Split Fragment"
            android:backgroundTint="#E91E63"/>

        <Button
            android:id="@+id/btn_send_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Broadcast"
            android:backgroundTint="#FF9800"/>

        <Button
            android:id="@+id/btn_send_ordered_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Ordered Broadcast (Intercept)"
            android:backgroundTint="#673AB7"/>

        <Button
            android:id="@+id/btn_file_persistence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Persistence Demo"
            android:backgroundTint="#009688"/>

        <Button
            android:id="@+id/btn_shared_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SharedPreferences Demo"
            android:backgroundTint="#3F51B5"/>

        <Button
            android:id="@+id/btn_sqlite_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SQLite Database Demo"
            android:backgroundTint="#795548"/>

        <Button
            android:id="@+id/btn_thread_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thread &amp; UI Rule Demo"
            android:backgroundTint="#9C27B0"/>

        <Button
            android:id="@+id/btn_service_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Lifecycle Demo"
            android:backgroundTint="#FF5722"/>

        <Button
            android:id="@+id/btn_bound_service_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bound Service Demo"
            android:backgroundTint="#8BC34A"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageview"
            android:src="@drawable/img"/>

    </LinearLayout>
</ScrollView>
