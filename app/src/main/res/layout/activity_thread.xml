<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI Thread Rule Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Waiting..."
        android:textSize="20sp"
        android:gravity="center"
        android:background="#E0E0E0"
        android:padding="20dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_crash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Update UI in Thread (Crash!)"
        android:backgroundTint="#F44336"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_correct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correct Update (Handler)"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_async_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start AsyncTask Demo"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_cancel_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel AsyncTask"
        android:backgroundTint="#F44336"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip: Check Logcat for crash details when clicking the red button."
        android:layout_marginTop="20dp"
        android:textColor="#757575"/>

</LinearLayout>