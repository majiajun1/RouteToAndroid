<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced Query Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scenario: Query the average price of books for each author, but only show authors whose average book price is greater than 20, ordered by average price descending."
            android:padding="10dp"
            android:background="#FFF3E0"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btn_prepare_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Prepare Test Data"
            android:backgroundTint="#FF9800"/>

        <Button
            android:id="@+id/btn_execute_complex_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Execute Full-Parameter Query"
            android:backgroundTint="#2196F3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equivalent SQL:"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT author, AVG(price) as avg_price \nFROM Book \nWHERE pages > 100 \nGROUP BY author \nHAVING avg_price > 20 \nORDER BY avg_price DESC"
            android:fontFamily="monospace"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Query Result:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_advanced_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:background="#E0F7FA"
            android:padding="10dp"
            android:text="Waiting for execution..."
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>