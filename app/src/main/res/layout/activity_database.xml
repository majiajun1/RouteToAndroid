<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQLite Database Demo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Book Name (e.g. The Da Vinci Code)" />

    <EditText
        android:id="@+id/et_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Author (e.g. Dan Brown)" />

    <EditText
        android:id="@+id/et_book_pages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Pages (e.g. 454)" />

    <EditText
        android:id="@+id/et_book_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Price (e.g. 16.96)" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_create_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create DB"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/btn_add_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Data"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/btn_update_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Data"
            android:layout_columnWeight="1"/>

        <Button
            android:id="@+id/btn_delete_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Data"
            android:layout_columnWeight="1"/>
    </GridLayout>

    <Button
        android:id="@+id/btn_query_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query Data"
        android:backgroundTint="#673AB7"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_db_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="#E0E0E0"
        android:text="Query Results..."
        android:scrollbars="vertical"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_goto_advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Advanced Query Demo (Full Params)"
        android:backgroundTint="#FF5722"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btn_goto_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Transaction Demo"
        android:backgroundTint="#607D8B"
        android:layout_marginTop="8dp"/>

</LinearLayout>